<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".ViewCommunityMember"
    android:background="#F8F3EA">



        <RelativeLayout
            android:id="@+id/top_section"
            android:layout_width="502dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="-88dp"
                android:alpha="0.7"
                android:contentDescription="Decorative ornament"
                android:src="@drawable/lavendar_border" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="263dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="-80dp"
                android:alpha="0.7"
                android:contentDescription="Decorative ornament"
                android:src="@drawable/sage_border" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="171dp"
                android:layout_height="158dp"
                android:layout_centerInParent="true"
                android:elevation="4dp"
                android:src="@drawable/oldlady"
                app:civ_border_width="0dp" />



        <TextView
            android:id="@+id/relationship_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sister"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="215dp"
            android:textSize="24sp"
            android:textColor="#9C27B0"
            android:textStyle="bold"

            android:fontFamily="sans-serif-medium"
            />

            <TextView
                android:id="@+id/name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="235dp"
                android:fontFamily="serif"
                android:text="Suzy Goops"
                android:textColor="#333333"
                android:textSize="32sp"
                android:textStyle="bold" />

        </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_section"
        android:layout_above="@+id/bottom_navigation_bar"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="24dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#CCCCCC" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/divider"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Decorative divider" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#CCCCCC" />

            </LinearLayout>

            <TextView
                android:id="@+id/quote_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Never forget that you are loved and appreciated. I am always here if you need someone to talk to."
                android:textSize="18sp"
                android:textColor="#555555"
                android:textAlignment="center"
                android:lineSpacingExtra="4dp"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="24dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="24dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#CCCCCC" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/divider"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Decorative divider" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#CCCCCC" />

            </LinearLayout>

            <TextView
                android:id="@+id/details_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your sister Suzy lives in Durban with her wife Joel and visits you on the first of every month."
                android:textSize="18sp"
                android:textColor="#555555"
                android:textAlignment="center"
                android:lineSpacingExtra="4dp"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="24dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:padding="16dp"
        android:background="#F8F3EA">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/back_btn"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:layout_marginEnd="16dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/delete_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete"
            android:background="@drawable/dashboard_icon_caregiver"
            android:textColor="#FFFFFF"
            android:backgroundTint="#666666"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/edit_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dashboard_icon_caregiver"
            android:text="Edit"
            android:textColor="#FFFFFF"
            android:backgroundTint="#9C27B0"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

    </LinearLayout>

</RelativeLayout>