<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="40dp"
    android:padding="24dp"
    android:background="@drawable/dialog_background"> <!-- Optional: for rounded corners -->

    <!-- Icon at the top-center of the dialog -->

    <!-- Title, constrained below the icon -->

    <!-- Message, constrained below the title -->
    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="Please Confirm Deletion."
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Positive Action Button (e.g., OK, Confirm) -->
    <!-- Constrained to the bottom-right -->

    <!-- Negative Action Button (e.g., Cancel) -->
    <!-- Constrained to the left of the positive button -->
    <Button
        android:id="@+id/btnPositive"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/confirmation_dlg_btn_bg"
        android:text="OK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_message"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnNegative"
        style="?attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="92dp"
        android:text="Cancel"
        android:background="@drawable/delete_dlg_btn_bg"
        app:layout_constraintBottom_toBottomOf="@id/btnPositive"
        app:layout_constraintEnd_toStartOf="@id/btnPositive"
        app:layout_constraintTop_toTopOf="@id/btnPositive"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>