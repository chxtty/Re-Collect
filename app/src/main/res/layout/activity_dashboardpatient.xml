<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_orange"
    android:foregroundTint="@color/light_orange"
    tools:context=".DashboardPatient">


    <GridLayout
        android:id="@+id/menuGrid"
        android:layout_width="349dp"
        android:layout_height="515dp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:gravity="center"
        android:padding="16dp"
        android:rowCount="3"
        android:useDefaultMargins="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/crdMyself"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:foreground="@drawable/screenshot_2025_07_23_205608"
            app:cardCornerRadius="20dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/crdDiary"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:foreground="@drawable/screenshot_2025_07_23_205833"
            app:cardCornerRadius="20dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/crdComm"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:foreground="@drawable/screenshot_2025_07_23_210230"
            app:cardCornerRadius="20dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/crdEvents"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:foreground="@drawable/screenshot_2025_07_23_210452"
            app:cardCornerRadius="20dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/crdCaregiver"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:foreground="@drawable/screenshot_2025_07_23_210541"
            app:cardCornerRadius="20dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/crdActivities"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:foreground="@drawable/screenshot_2025_07_23_210649"
            app:cardCornerRadius="20dp" />





    </GridLayout>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="535dp"
        android:layout_marginEnd="144dp"
        app:srcCompat="@drawable/bottom_flora1"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:translationX="430dp"
        android:translationY="215dp"
        android:clipToOutline="false" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/top_flora1"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="162dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        android:translationX="135dp"
        android:translationY="190dp"
        />

    <TextView
        android:id="@+id/txtWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="64dp"
        android:text="Welcome Back, "
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="154dp"
        android:layout_height="58dp"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#46494C"
        android:text="Log out"
        android:textColor="#FFFBFB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/Pastel_gray_green"

        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="16dp">

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>