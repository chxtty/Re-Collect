<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="8dp"
    android:animateLayoutChanges="true"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/creme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:padding="25dp">

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="57dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:background="@drawable/filter" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request Types" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <RadioButton
                android:id="@+id/rgbAllReq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="All" />

            <RadioButton
                android:id="@+id/rgbCommunityReq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Community Members" />

            <RadioButton
                android:id="@+id/rgbActivitiesReq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activities" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filter by" />

        <RadioGroup
            android:id="@+id/rgpFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <RadioButton
                android:id="@+id/rgbNameReq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name" />

            <RadioButton
                android:id="@+id/rgbAuthorReq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Author" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sort by" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <RadioButton
                android:id="@+id/rgbAscReq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ascending" />

            <RadioButton
                android:id="@+id/rgbDescReq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descending" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Declined Requests" />

        <CheckBox
            android:id="@+id/checkDecline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Declined" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancelFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/logout_btn"
                android:backgroundTint="#46494C"
                android:text="Cancel"
                android:textColor="#D1CCC8" />

            <Button
                android:id="@+id/btnSaveFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/dashboard_icon_caregiver"
                android:backgroundTint="#A285C5"
                android:text="Save" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>